<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCT_TEST_ASSIGNMENT"
        xmlns:VIew="clr-namespace:DCT_TEST_ASSIGNMENT.VIew" x:Class="DCT_TEST_ASSIGNMENT.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Transparent">

    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="228"/>
            <ColumnDefinition Width="622"/>
        </Grid.ColumnDefinitions>
        <Border Background="#212529"
                CornerRadius="25"/>
        <StackPanel>
            <Button Content="Main"  Height="39" FontFamily="Times New Roman" FontSize="20" Command = "{Binding ShowHomePage}" />
            <Button Content="Converter"  Height="43" FontFamily="Times New Roman" FontSize="20" Command = "{Binding ShowConverterPage}" />
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding CurrentValue}" />

    </Grid>
</Window>
