<Window x:Class="DCT_TEST_ASSIGNMENT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCT_TEST_ASSIGNMENT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Transparent">
    <Grid>
        <Border Background="#212529"
                CornerRadius="25"/>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="228"/>
            <ColumnDefinition Width="622"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Main" ></Button>
            <Button Content="Converter"></Button>
            
        </StackPanel>

        <Frame
            Grid.Column="1"
            Content="{Binding CurentPage}"
            NavigationUIVisibility="Hidden"
            Opacity="{Binding FrameOpecity}"/>

    </Grid>
</Window>
